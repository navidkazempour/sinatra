<% if @message && @message.errors.any? %>
  <div>
    <strong>Some issues whith your message, please fix them:</strong>
    <ul>
      <% @message.errors.full_message.each do |message| %>
      <li><%= message %></li>
      <%end%>
    </ul>
  </div>
<%end%>

<form method="post" action="/messages">
  <div>
    <label>Author:</label>
    <input type="text" name="author">
  </div>
  <div>
    <label>Title:</label>
    <input type="text" name="title">
  </div>
  <div>
    <label>Content:</label>
    <input type="text" name="content">
  </div>
  <div>
    <input type="submit" name="Submit">
  </div>
</form>
